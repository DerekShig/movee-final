<div class="main">

  <h1 class="mb-3">Hello, {{user.firstName}}</h1>

  <a href="/user/add"><button type="button" class="btn btn-success mb-3">Add Product</button></a>

  {{!-- Search box --}}
  <div class="mb-4 form-floating col-12 col-sm-8 col-md-5 col-lg-3">
    <input type="text" class="form-control" id="filter-list" aria-describedby="filter" placeholder="Planet Earth" name="filter-list">
    <label for="filter-list" class="form-label">Filter List</label>     
  </div>

  <div class="d-flex flex-row flex-wrap justify justify-content-center justify-content-sm-start justify-content-md-start" id="product-container">
    {{#each products}}
      <div class="mb-3" id="display-container">
        <div class="d-flex flex-column text-center me-3 cardDesc" data-productname="{{title}}">
          <a href="/{{type}}/{{id}}" style="width: 10rem;">
            <img src="{{imgS}}" alt="{{title}}" class="mb-1 rounded cardDesc" style="width: 10rem;">
          </a>
          <div id="admin-controls" class="mb-2">
            <a href="/user/update/{{id}}"><button type="button" class="btn btn-primary btn-sm" style="width: 57.92px;">Edit</button></a>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-value="{{id}}">Delete</button>
          </div>         
        </div>
      </div>
    {{/each}}
  </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/user/delete/" method="POST" id="delete-product">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/filter.js"></script>
<script src="/js/modal.js"></script>